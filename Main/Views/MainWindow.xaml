<Window x:Class="Main.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" VerticalAlignment="Center" LastChildFill="True" >
            <Label Content="URL:" VerticalContentAlignment="Center" Cursor="Hand" MouseLeftButtonUp="Label_MouseLeftButtonUp"/>
            <Button DockPanel.Dock="Right"
                    Margin="10 0 10 0" Padding="5"
                    Content="search"
                    Click="Button_Click"/>
            <TextBox Name="tbURL"
                     Height="30" 
                     Text="sample text"
                     VerticalContentAlignment="Center"/>
        </DockPanel>
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Name="tblContent" Grid.Row="1"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
